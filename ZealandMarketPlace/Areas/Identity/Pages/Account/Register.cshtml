@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="container_register">
    <div class="register_area">

        <div>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <!--<div asp-validation-summary="All" class="text-danger"></div> -->
                <div class="validation">
                    <span asp-validation-for="Input.FirstName" class="text_information"></span>
                    <span asp-validation-for="Input.LateName" class="text_information"></span>

                </div>
                <div class="register_item">
                    <input asp-for="Input.FirstName"  type="text" placeholder="First name"/>
                    <input asp-for="Input.LateName"  type="text" placeholder="Last name"/>
                </div>
                <div class="validation">
                    <span asp-validation-for="Input.Email" class="text_information"></span>
                    <span asp-validation-for="Input.Phone" class="text_information"></span>

                </div>
                <div class="register_item">
                    <input asp-for="Input.Email" type="text" placeholder="Email"/>
                    <input asp-for="Input.Phone" type="text" placeholder="Phone"/>
                </div>
                <div class="validation">
                        <span asp-validation-for="Input.Password"  class="text_information"></span>
                     <span asp-validation-for="Input.ConfirmPassword" class="text_information"></span> 

                </div>
                <div class="register_item">
                    <input asp-for="Input.Password" type="password"  placeholder="Password"/>
                    <input asp-for="Input.ConfirmPassword" type="password"  placeholder="Confirm password"/>
                </div>
                <div class="register_button">
                    <input type="submit"  value="Sign up">
                </div>
                
            </form>
        </div>
        
        <div class="container_link">
            <div class="container_area">
                <div class="link_login">
                   
                        <span>Already have an account?</span>
                        <a asp-page="Login">Login now</a>
                   
                </div>
            </div>
            </div>


    </div>

</div>

