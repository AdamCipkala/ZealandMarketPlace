@page
@model ZealandMarketPlace.Pages.Items.UsersItems

@{
    ViewData["Title"] = "Favourites";
}

<link rel="stylesheet" href="~/css/index.css">
<div style="margin: 30px">
    <h3>Users email: @Model.ItemUser.Email</h3>
<h5>Users id: @Model.ItemUser.Id</h5>
</div>
<main>
    <section class="card_section">
        @foreach (var item in Model.Items)
        {
            <div class="card_container">
                <div class="card_image">
                    @if (@item.ImageData == null)
                    {
                        <img alt="photo" src="">
                    }
                    else
                    {
                        <img alt="photo" src="data:image/png;base64,@Convert.ToBase64String(item.ImageData)">
                    }

                </div>


                <div class="card_text_content">
                    <div class="card_title">
                        <p class="text--medium">
                            @item.Name
                        </p>
                        <p class="text--medium text_bold">
                            @item.Price dkk
                        </p>
                    </div>
                    <div class="card_info">
                        <p class="text--medium">@item.Status</p>
                        <a asp-page="/Items/ItemDetails" asp-route-id="@item.ItemId" class="button_details">Details</a>
                    </div>

                </div>
            </div>
        }


    </section>
</main>