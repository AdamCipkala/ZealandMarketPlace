<main>
    <section class="card_section">
        @foreach (var user in Model.UsersContacts)
        {
            <a asp-page="/Items/UsersItems" asp-route-userId="@user.Id">

                <div class="card_container">

                    <div class="card_text_content">

                        <div class="card_info">
                            <p class="text--medium">
                                <b>Email:</b> @user.Email
                            </p>
                        </div>

                        <div class="card_info">
                            <p class="text--medium">
                                <b>Number:</b> @user.PhoneNumber
                            </p>
                        </div>

                        <div class="card_info">
                            <p class="text--medium">
                                <b>Name:</b> @user.NormalizedUserName
                            </p>
                        </div>


                    </div>
                </div>
            </a>
        }


    </section>

</main>